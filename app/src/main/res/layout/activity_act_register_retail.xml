    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Isikan kolom berikut sesuai dengan data diri">
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/et_round_register"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F8F6F6"
                android:drawableLeft="@drawable/ic_person_24"
                android:hint="Nama Pengguna ..."

                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="13dp"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/et_round_register"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/tgl_lahir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F8F6F6"
                android:drawableLeft="@drawable/ic_date_24"
                android:hint="Tanggal Lahir"
                android:inputType="date"
                android:editable="false"
                android:imeOptions="actionNext"
                android:textSize="13dp"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/et_round_register"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F8F6F6"
                android:drawableLeft="@drawable/ic_email_24"
                android:hint="Email ..."

                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:textSize="13dp"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/et_round_register"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F8F6F6"
                android:drawableLeft="@drawable/ic_home_24"
                android:hint="Alamat ..."

                android:textSize="13dp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/et_round_register"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/no_telp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F8F6F6"
                android:drawableLeft="@drawable/ic_contact_phone_24"
                android:hint="No. Telepon ..."

                android:inputType="number"
                android:imeOptions="actionNext"
                android:textSize="13dp"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/et_round_register"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/password"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="#F8F6F6"
                android:drawableLeft="@drawable/ic_lock_24"
                android:hint="Buat Kata Sandi ..."
                android:textSize="13dp"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end">
                <ImageView
                    android:id="@+id/show_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_eye_open_24">
                </ImageView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>

        </RelativeLayout>
        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:text="Daftar"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/grosir_bt_square"></Button>
    </LinearLayout>


</LinearLayout>