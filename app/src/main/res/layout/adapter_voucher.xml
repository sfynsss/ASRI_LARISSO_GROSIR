<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:elevation="15dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@drawable/grosir_voucher_bgvoucher">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#pastiuntung"
            android:textColor="#FEED00"
            android:layout_marginLeft="12dp"
            android:textStyle="bold|italic">
        </TextView>
        <TextView
            android:id="@+id/judul_voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VOUCHER BELANJA Rp. 15000"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp">
        </TextView>
        <TextView
            android:id="@+id/sk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="12dp"
            android:text="Nikmati voucher belanja potongan Rp. 15000 dengan transaksi minimal Rp.50000"
            android:textColor="#fff"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxLength="100"
            android:gravity="center_vertical">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:background="@drawable/grosir_voucher_icdate">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masa Berlaku">
                </TextView>
                <TextView
                    android:id="@+id/tgl_berlaku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_gunakan"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Pakai"
                    android:textColor="#2A5EE8"
                    android:textStyle="bold"
                    android:background="@drawable/grosir_voucher_btpakai">
                </Button>
            </LinearLayout>
        </LinearLayout>
